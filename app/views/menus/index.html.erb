<% if !pewarung_signed_in? %>
<div class="container">
  <div class="jumbotron">
    <div class="row">
      <h1>Selamat datang di Ngant.in</h1>
      <h2>Solusi mahasiswa lapar sesuai kedalaman kantong</h2>
      <div class="col-lg-4 col-md-offset-4">
        <p><%= link_to 'Daftar sebagai pewarung', new_pewarung_registration_path, class: "btn btn-primary btn-lg" %></p>
      </div>      
    </div>    
  </div>
</div>
<% end -%>

<h1>Menu di Ngant.in</h1>

<div class="row">
  <% @menus.each do |menu| %>
    <div class="col-sm-6 col-md-3">
      <div class="thumbnail">
        <%= link_to (image_tag menu.image.variant(resize_to_fit: [400, 600]), class: 'image'), menu %>
      </div>
    </div>
    <% end %>
</div>
